<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:onClick="clic"
    android:paddingBottom="@dimen/row_padding"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/row_padding">

    <ImageView
        android:id="@+id/kucukResim"
        android:layout_width="@dimen/thumbnail"
        android:layout_height="@dimen/thumbnail"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/row_padding" />

    <TextView
        android:id="@+id/marka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/model"
        android:layout_toRightOf="@id/kucukResim"
        android:textColor="#ff6200"
        android:textSize="@dimen/contact_number" />

    <TextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/kucukResim"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:textSize="@dimen/contact_name"
        />

    <TextView
        android:id="@+id/urunIDNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/kucukResim"
        android:fontFamily="sans-serif-medium"
        android:textColor="#ffffff"
        android:visibility="gone" />

</RelativeLayout>